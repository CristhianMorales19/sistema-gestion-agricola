# Variables de Entorno - Backend AgroMano
# ✅ BASE DE DATOS YA GENERADA Y CONFIGURADA

# Base de Datos (actualizada para AgroMano)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=agromano

# Auth0 Configuration (COMPLETAR CON TUS DATOS)
AUTH0_DOMAIN=tu-tenant.auth0.com
AUTH0_AUDIENCE=https://agromano-api
AUTH0_CLIENT_ID=tu-client-id
AUTH0_CLIENT_SECRET=tu-client-secret

# Database URL para Prisma
DATABASE_URL="mysql://root@localhost:3306/agromano"

# Credenciales de administrador (ya creado en Auth0 y BD)
ADMIN_EMAIL=admin@agromano.com
ADMIN_PASSWORD=Admin123!

# JWT (backup, Auth0 maneja tokens)
JWT_SECRET=tu_secreto_jwt_muy_seguro_aqui
JWT_EXPIRES_IN=24h

# Servidor
PORT=3000

# ================================================================
# INSTRUCCIONES PARA COMPLETAR AUTH0:
# ================================================================
# 1. Ve a Auth0 Dashboard → Applications → Tu App → Settings
# 2. Copia Domain → AUTH0_DOMAIN  
# 3. Copia Client ID → AUTH0_CLIENT_ID
# 4. Copia Client Secret → AUTH0_CLIENT_SECRET
# 5. Ve a APIs → Tu API → AUTH0_AUDIENCE
NODE_ENV=development

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
